extends ../layout.pug
block content

    div.container

        h1 Listado de Estudiantes

        table.table
            thead.thead-dark
                tr
                    th Id
                    th Nombre
                    th Apellidos
                    th Edad
                    th Email
                    th Nota Media
                    th Fecha Matricula
                    th Matricula
                    th Discapacidad
                    th Sexo
                
            each row in rows
                tr
                    td= row.id
                    td= row.nombre
                    td= row.apellidos
                    td= row.edad
                    td= row.email
                    td= row.notamedia
                    td= row.fecha_matricula
                    td= row.matricula
                    td= row.discapacidad
                    td= row.sexo

        div.botones
            button.btn.btn-primary
                a(href="http://localhost:3000/students/new") Crear Nuevo Estudiante