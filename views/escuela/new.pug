extends ../layout.pug
block content

    div.container

        h1 Formulario Nuevo Estudiante

        form(action="/students/create" method="post")
            div.form-group
                label Nombre
                input(type="text" name="nombre").form-control

            div.form-group
                label Apellidos
                input(type="text" name="apellidos").form-control

            div.form-group
                label Edad
                input(type="text" name="edad").form-control

            div.form-group
                label Email
                input(type="email" name="email").form-control

            div.form-group
                label Nota Media
                input(type="text" name="notamedia").form-control

            div.form-group
                label Fecha de Matriculación
                input(type="date" name="fecha_matricula").form-control

            div.form-group
                label Número de Matrícula
                input(type="text" name="matricula").form-control

            div.form-group
                label Discapacidad
                input(type="text" name="discapacidad").form-control

            div.form-group
                label Sexo
                select(name="sexo").custom-select
                    option(selected='') Selecciona una opción
                    option(value='M') Masculino
                    option(value='F') Femenino

            div.form-group
                input(type="submit" value="Crear Estudiante").btn.btn-primary

            
        div.botones
            button.btn.btn-primary
                a(href="/students/") Volver