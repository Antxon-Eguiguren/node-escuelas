extends ../layout.pug
block content

    div.container

        h1 Nuevo Estudiante Añadido a la Escuela

        table.table
            thead.thead-dark
                tr
                    th Nombre
                    th Apellido
                    th Edad
                    th Email
                    th Número de Matrícula
                
                tr
                    td= student.nombre
                    td= student.apellido
                    td= student.edad
                    td= student.email
                    td= student.numMat

        div.botones
            button.btn.btn-primary
                a(href="http://localhost:3000/students") Ir a Inicio